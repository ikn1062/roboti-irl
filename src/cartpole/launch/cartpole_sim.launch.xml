<launch>
    <param name="robot_description_cartpole" command="xacro --inorder $(find cartpole_gazebo)/urdf/xacro/carpole_gazebo_urdf.xacro.urdf" />
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" args="$(find cartpole_gazebo)/urdf/xacro/carpole_gazebo_urdf.xacro.urdf">
        <param name="publish_frequency" value="100.0" />
        <param name="robot_description" value="robot_description_cartpole" />
        <param name="use_sim_time" value="false" />
        <remap from="/joint_states" to="/joint_states"/>
    </node>


    <!-- <node name="teleop_keyboard" pkg="turtlebot3_teleop" exec="teleop_keyboard" output="screen"  launch-prefix="xterm -e"/> -->
    <node name="rviz" pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share cartpole)/config/simulation.rviz" />
</launch>